<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#222266">
    
    <TableLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    >
    <TableRow>
        <TextView 
            android:id="@+id/fixText"
			android:textColor="#8888EE" 
			android:layout_height="wrap_content" 
			android:layout_weight="1" 
			android:text="GPS position fixes: 0" 
			android:gravity="center"
			android:layout_width="wrap_content" 
			android:textSize="14dp" 
			android:layout_gravity="center_vertical"
			android:paddingTop="10dp"
		    android:paddingLeft="8dp"
		    android:paddingRight="8dp"
		    android:paddingBottom="10dp"
			
			>
		</TextView>
	</TableRow>
	</TableLayout>
    
    
    <TableLayout
		android:id="@+id/menubar1"
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:layout_below="@+id/menu_text"
		android:background="#8888EE"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		>
	</TableLayout>
    <TableLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    >
    <TableRow>
        <TextView 
			android:textColor="#8888EE" 
			android:layout_height="wrap_content" 
			android:layout_weight="1" 
			android:text="Latitude:" 
			android:gravity="left"
			android:layout_width="wrap_content" 
			android:textSize="22dp" 
			android:id="@+id/mainText2" 
			android:layout_gravity="center_vertical"
			android:paddingLeft="8dp"
			>
		</TextView>
	</TableRow>
	<TableRow>
    	<TextView
			android:id="@+id/latText"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:text="0.000000"
		    android:textSize="46dp"
		    android:textColor="#8888EE"
		    android:gravity="center"
		    android:layout_weight="1"
		    android:paddingTop="8dp"
		    android:paddingLeft="1dp"
		    android:paddingRight="8dp"
		    android:paddingBottom="4dp"
		/>		
	</TableRow>
	<TableRow>
    	<TextView
			android:id="@+id/latText2"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:text="0° 0' 0.0''"
		    android:textSize="14dp"
		    android:textColor="#8888EE"
		    android:gravity="center"
		    android:layout_weight="1"
		    android:paddingTop="0dp"
		    android:paddingLeft="1dp"
		    android:paddingRight="8dp"
		    android:paddingBottom="12dp"
		/>		
	</TableRow>
	</TableLayout>
	<TableLayout
		android:id="@+id/menubar2"
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:layout_below="@+id/menu_text"
		android:background="#8888EE"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		>
	</TableLayout>	
	
	<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    >
    <TableRow>
        <TextView 
			android:textColor="#8888EE" 
			android:layout_height="wrap_content" 
			android:layout_weight="1" 
			android:text="Longitude:" 
			android:gravity="left"
			android:layout_width="wrap_content" 
			android:textSize="22dp" 
			android:id="@+id/mainText3" 
			android:layout_gravity="center_vertical"
			android:paddingLeft="8dp"
			>
		</TextView>
		</TableRow>
		<TableRow>
    	<TextView
			android:id="@+id/lonText"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:text="0.000000"
		    android:textSize="46dp"
		    android:textColor="#8888EE"
		    android:gravity="center"
		    android:layout_weight="1"
		    android:paddingTop="8dp"
		    android:paddingLeft="1dp"
		    android:paddingRight="8dp"
		    android:paddingBottom="4dp"
		/>		
		</TableRow>
		<TableRow>
    	<TextView
			android:id="@+id/lonText2"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:text="0° 0' 0.0''"
		    android:textSize="14dp"
		    android:textColor="#8888EE"
		    android:gravity="center"
		    android:layout_weight="1"
		    android:paddingTop="0dp"
		    android:paddingLeft="1dp"
		    android:paddingRight="8dp"
		    android:paddingBottom="12dp"
		/>		
		</TableRow>
	</TableLayout>
	
	<TableLayout
		android:id="@+id/menubar3"
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:layout_below="@+id/menu_text"
		android:background="#8888EE"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		>
	</TableLayout>
	
	 <TableLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    >
    <TableRow>
        <TextView 
            android:id="@+id/utmText"
			android:textColor="#8888EE" 
			android:layout_height="wrap_content" 
			android:layout_weight="1" 
			android:text="UTM Coordinates: 0 - 0 0" 
			android:gravity="center"
			android:layout_width="wrap_content" 
			android:textSize="14dp" 
			android:layout_gravity="center_vertical"
			android:paddingTop="10dp"
		    android:paddingLeft="8dp"
		    android:paddingRight="8dp"
		    android:paddingBottom="10dp"
			
			>
		</TextView>
	</TableRow>
	</TableLayout>
	
	<TableLayout
		android:id="@+id/menubar4"
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:layout_below="@+id/menu_text"
		android:background="#8888EE"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		>
	</TableLayout>

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_gravity="center"
	    android:paddingLeft="16dp"
	    android:paddingRight="16dp"
	    android:gravity="center" >

	    <Button
	        android:id="@+id/locButton"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:paddingBottom="4dp"
	        android:paddingLeft="8dp"
	        android:paddingRight="8dp"
	        android:paddingTop="4dp"
	        android:text="Show Location"
	        android:textSize="16dp"
	        android:textStyle="bold" />
	    
	    <Button
	        android:id="@+id/shareButton"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:paddingBottom="4dp"
	        android:paddingLeft="8dp"
	        android:paddingRight="8dp"
	        android:paddingTop="4dp"
	        android:text="Share Location"
	        android:textSize="16dp"
	        android:textStyle="bold" />

	</LinearLayout>

</LinearLayout>
